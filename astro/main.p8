function upd_p()

	if btn(➡️) then
		if (t==p.ani_spd) i+=p.sp[1] t=0
		if (i==p.ani_frm) i=p.sp[1]
	end

end

function drw_p()
	
	
	spr(
		p.sp[i],p.x,p.y,
		p.sp_siz,p.sp_siz
		)

end
