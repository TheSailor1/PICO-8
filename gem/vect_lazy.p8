function _init()
	
	--activate mouse
	poke(0x5f2d) 
	
	vstr="0,0,-32,-32,32,0|0,0,32,-32"
	vdata=split2d(vstr)
end

function _update60()
end

function _draw()
	cls(0)
	
	--middle screen
	pset(64,64,13)
	
	vdraw(vdata)
end
-->8
--tool

function vdraw(vd)
	for v in all(vd) do
		line(
			v[1]+64,
			v[2]+64,
			v[3]+64,
			v[4]+64
			,8)
	end
end

function split2d(s)
	local arr=split(s,"|",false)
	for k, v in pairs(arr) do
		arr[k] = split(v)
	end
	
	return arr
end

function updatemouse()
	lastmx=mousex
	lastmy=mousey
	lastbl=buttl
	lastbr=buttr
	
	mousex=stat(32)
	mousey=stat(33)
	buttl=stat(34)&1>0
	buttr=stat(34)&2>0
end
