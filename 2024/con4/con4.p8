	--grid
	for c=1,grdcol do
		for r=1,grdrow do
			rect(
				-grdoffx+(c*grdsiz),
				-grdoffy+(r*grdsiz),
				-grdoffx+(c*grdsiz)+grdsiz,
				-grdoffy+(r*grdsiz)+grdsiz,
				grdcolor
			)
		end
	end
end
