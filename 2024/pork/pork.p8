--main
function _init()
	t=0
	ini_game()
end

function _update60()
	t+=1
	
	_upd()
end

function _draw()
	_drw()
end

function ini_game()
	step=8
	
	dirx={-1,1,0,0}
	diry={0,0,-1,1}
	
	plr={
		x=1,
		y=1,
		offx=0,
		offy=0,
		soffx=0,
		soffy=0,
		ani={240,241,242,243},
		flpx=false,
		t=0,
		mov=nil
	}
	
	_upd=upd_game
	_drw=drw_game
end
