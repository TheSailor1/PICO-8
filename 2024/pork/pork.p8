--gameplay
function issolid()
	
end

function mov_plr(_dx,_dy)
	local destx,desty=plr.x+_dx,plr.y+_dy
	local tle=mget(destx,desty)
	
	if _dx<0 then 
		plr.flpx=true
	elseif _dx>0 then
		plr.flpx=false
	end
	
	--check for walls
	if fget(tle,0) then
		plr.soffx,plr.soffy=_dx*8,_dy*8
		plr.offx,plr.offy=0,0
		
		plr.t=0
		
		_upd=upd_pturn
		plr.mov=mov_bump
	else
		plr.x+=_dx
		plr.y+=_dy
		
		plr.soffx,plr.soffy=-_dx*8,-_dy*8
		plr.offx,plr.offy=plr.soffx,plr.soffy
		
		plr.t=0
		
		_upd=upd_pturn
		plr.mov=mov_walk
	end
end
