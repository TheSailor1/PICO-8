--updates
function upd_game()
	upd_plr()
end

function upd_plr()
	for i=0,3 do
		if btnp(i) then
			mov_plr(dirx[i+1],diry[i+1])
			return
		end
	end
end

function upd_pturn()
	plr.t=min(plr.t+0.125,1)
	
	plr.mov()
	
	if plr.t==1 then
		_upd=upd_game
	end
end

function mov_walk()
	plr.offx=plr.soffx*(1-plr.t)
	plr.offy=plr.soffy*(1-plr.t)
end

function mov_bump()
	local tme=plr.t
	
	if tme>0.5 then
		tme=1-plr.t
	end
	
	plr.offx=plr.soffx*tme
	plr.offy=plr.soffy*tme
end
