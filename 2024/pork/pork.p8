--tools
function getframe(ani,spd)
	return ani[1+flr(t/spd)%#ani]
end

function drwspr(_spr,_x,_y,_c,_fx,_fy)
	palt(0,false)
	pal(6,_c)
	spr(_spr,_x,_y,1,1,_fx,_fy)
	pal()
end
