pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
	drops={}
	for i=1,200 do
		drops[i]=
		{
			x=rnd(256)-128,
			y=rnd(128),
			v=1+flr(rnd(2))
		}
	end
end

function _update60()
	for i=1,#drops do
		drops[i].x+=3/drops[i].v
		drops[i].y+=3/drops[i].v
		if drops[i].y>=128+6 then
			drops[i]=
			{
				x=rnd(256)-128,
				y=0,
				v=1+flr(rnd(2))
			}
		end
	end
end

function _draw()
	cls()
	for i=1,#drops do
		if drops[i].v==1 then
			l=8
		else
			l=4
		end
		
		line(
			drops[i].x,drops[i].y,
			drops[i].x-l,drops[i].y-l,
			12-11*(drops[i].v-1)
		)
	end
end
